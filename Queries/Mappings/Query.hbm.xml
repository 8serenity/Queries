<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="Queries" namespace="Queries.Models">
  <class name="Query" table="Queries" dynamic-update="true" >
    <cache usage="read-write"/>
    
    <id name="Id" column="Id" type="int">
      <generator class="native" />
    </id>

    <property name="QueryText"  />
    <property name="DateWritten" />
    <property name="UserId" />
    <property name="QueryStatus" />
  </class>
  
  <class name="User" table="Users" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Id" column="Id" type="int">
      <generator class="native" />
    </id>

    <property name="Name"  />
    <property name="Surname" />
    <property name="Email" />
    <property name="Password" />
  </class>
</hibernate-mapping>